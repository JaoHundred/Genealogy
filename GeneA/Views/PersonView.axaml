<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="550"
             xmlns:vm="clr-namespace:GeneA.ViewModels"
             xmlns:model="clr-namespace:Model.Core;assembly=ModelA"
             xmlns:loc="clr-namespace:GeneA.Lang;assembly=GeneA"
             xmlns:conv="clr-namespace:GeneA.Converters;assembly=GeneA"
             xmlns:enum="clr-namespace:ModelA.Enums;assembly=ModelA"
             x:Class="GeneA.Views.PersonView"
             x:DataType="vm:PersonViewModel"
             Name="view">

  <UserControl.Resources>

    <conv:BirthDeathConverter x:Key="BirthDeathDateConv"/>
    <conv:ValidDatetimeConverter x:Key="ValidDatetimeConv"/>

    <DataTemplate x:Key="AutoCompleteTemplate" x:DataType="model:Person">
        <Grid RowDefinitions="auto, auto, auto">
          <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap" Margin="0,0,0,5"
                     FontWeight="SemiBold"/>

          <Grid Grid.Row="1" RowDefinitions="* *" ColumnDefinitions="* *"
                HorizontalAlignment="Center">
            
            <TextBlock Text="{x:Static loc:Resource.BirthDate}" Margin="0,0,15,0"/>
            <TextBlock Grid.Row="1" Text="{Binding BirthDate 
                   ,Converter={StaticResource BirthDeathDateConv}
                   ,ConverterParameter=BD}"
                       HorizontalAlignment="Center" Margin="0,0,15,0"/>

            <TextBlock Grid.Column="1" Text="{x:Static loc:Resource.DeathDate}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DeathDate
                   ,Converter={StaticResource BirthDeathDateConv}
                   ,ConverterParameter=DD}"
                       HorizontalAlignment="Center"/>
          </Grid>

          <Separator Grid.Row="2" BorderBrush="Gray"/>
        </Grid>
    </DataTemplate>

  </UserControl.Resources>

  <Border Margin="10" BorderThickness="5" BorderBrush="LightGray" CornerRadius="5">

    <Grid RowDefinitions="* auto">

      <ScrollViewer>
        <Grid Classes="TextLabel"
              RowDefinitions="auto auto auto 
              auto auto auto 
              auto auto auto 
              auto auto auto
              auto auto auto
              *"
              ColumnDefinitions="* *" Margin="5">

          <TextBlock Text="{x:Static loc:Resource.Name}"/>
          <TextBox Grid.Row="1" Text="{Binding Person.Name}"
                   Margin="0,0,5,0"/>

          <TextBlock Grid.Column="1" Text="{x:Static loc:Resource.Gender}" Margin="5,0,0,0"/>
          <ComboBox Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"
                    ItemsSource="{Binding Genders}"
                    SelectedItem="{Binding SelectedGender, Mode=TwoWay}"
                    
                    DisplayMemberBinding="{Binding Name}">
            
          </ComboBox>

          <TextBlock Grid.Row="2"  Text="{x:Static loc:Resource.BirthDate}" />
          <MaskedTextBox Grid.Row="3" Mask="00/00/0000" Margin="0,0,5,0"
                         Text="{Binding BirthDateString}"/>

          <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Static loc:Resource.DeathDate}"
                     Margin="5,0,0,0"/>
          <MaskedTextBox Grid.Row="3" Grid.Column="1" Mask="00/00/0000" Margin="5,0,0,0"
                         Text="{Binding DeathDateString}"/>

          <TextBlock Grid.Row="4" Text="{x:Static loc:Resource.Father}"/>
          <AutoCompleteBox  Grid.Row="5"
                           ItemsSource="{Binding FatherList}"
                           ItemTemplate="{StaticResource AutoCompleteTemplate}"
                           IsTextCompletionEnabled="True"
                           Text="{Binding Mode=OneWayToSource}"
                           FilterMode="StartsWith"
                           Margin="0,0,5,0"/>

          <TextBlock Grid.Row="4" Grid.Column="1" Text="{x:Static loc:Resource.Mother}"
                     Margin="5,0,0,0"/>
          <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding MotherList}"
                    Margin="5,0,0,0"
                    ItemTemplate="{StaticResource AutoCompleteTemplate}"/>

          <TextBlock Grid.Row="6" Text="{x:Static loc:Resource.Wedding}"/>
          <MaskedTextBox Grid.Row="7" Grid.ColumnSpan="2" Mask="00/00/0000"
                         Text="{Binding WeddingString}"/>

          <TextBlock Grid.Row="8" Text="{x:Static loc:Resource.Spouse}"/>
          <TextBox Grid.Row="9" Grid.ColumnSpan="2" Text="Placeholder use popup"/>

          <TextBlock Grid.Row="10" Text="{x:Static loc:Resource.Offsprings}"/>
          <TextBox Grid.Row="11" Grid.ColumnSpan="2" Text="Placeholder use popup"/>

          <TextBlock Grid.Row="12" Text="{x:Static loc:Resource.Nationality}"/>
          <TextBox Grid.Row="13" Grid.ColumnSpan="2" Text="Placeholder use popup"/>

          <TextBlock Grid.Row="14" Text="{x:Static loc:Resource.Description}"/>
          <TextBox Grid.Row="15" Grid.ColumnSpan="2" Focusable="True"
                   Text="{Binding Person.Description}" Height="200"
                   TextWrapping="Wrap"/>
        </Grid>
      </ScrollViewer>

      <Grid Classes="Default" Grid.Row="1" ColumnDefinitions="auto,*"
            Margin="10">

        <Button Command="{Binding DeleteCommand}">
          <TextBlock Text="{x:Static loc:Resource.Delete}" FontSize="14"/>
        </Button>
        <Button Grid.Column="1"  HorizontalAlignment="Stretch" Content="Save"
                Command="{Binding SaveCommand}">
          <TextBlock Text="{x:Static loc:Resource.Save}" FontSize="14"/>
        </Button>

      </Grid>
    </Grid>
  </Border>

</UserControl>
